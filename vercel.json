    // === FORCE REDIRECT EVEN IF FILE EXISTS (using :path*.html trick) ===
    {
      "source": "/:path*.html",
      "has": [
        {
          "type": "header",
          "key": "host",
          "value": "bucur-tur.com"
        }
      ],
      "destination": "https://bucurtur.md/:path*",
      "permanent": true
    },

    // === ALL OTHER REQUESTS FROM OLD DOMAIN â†’ NEW DOMAIN (preserves path) ===
    {
      "source": "/:path*",
      "has": [
        {
          "type": "header",
          "key": "host",
          "value": "bucur-tur.com"
        }
      ],
      "destination": "https://bucurtur.md/:path*",
      "permanent": true
    },

    // === WWW version too (optional but recommended) ===
    {
      "source": "/:path*",
      "has": [
        {
          "type": "header",
          "key": "host",
          "value": "www.bucur-tur.com"
        }
      ],
      "destination": "https://bucurtur.md/:path*",
      "permanent": true
    }
  ]
