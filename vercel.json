{
  "redirects": [
    // Specific 1:1 redirects for your old pages (higher priority)
    { "source": "/about.html",                    "destination": "https://bucurtur.com/",  "permanent": true },
    { "source": "/contact.html",                  "destination": "https://bucurtur.com/",  "permanent": true },
    { "source": "/cookie.html",                   "destination": "https://bucurtur.com", "permanent": true },
    { "source": "/index.html",                    "destination": "https://www.bucurtur.md/",                               "permanent": true },
    { "source": "/italia-moldova.html",           "destination": "https://bucurtur.com", "permanent": true },
    { "source": "https://bucur-tur.com/moldova-italia.html",           "destination": "https://bucurtur.com", "permanent": true },
    { "source": "/page-sidebar-left.html",        "destination": "https://bucurtur.com",                               "permanent": true },
    { "source": "/single-destination.html",       "destination": "https://bucurtur.com", "permanent": true },
    { "source": "/transport-chisinau-italia.html","destination": "https://bucurtur.com", "permanent": true },
    { "source": "/transport-italia-moldova.html", "destination": "https://bucurtur.com", "permanent": true },
    { "source": "/transport-privat-italia.html",  "destination": "https://bucurtur.com",                               "permanent": true },

    // Also catch the root explicitly
